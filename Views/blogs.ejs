<!DOCTYPE html>
<html lang="en">
    <%- include('Layouts/header') %>
<body style="background-color: lightgrey;">
    <%- include('Layouts/navbar') %>
    <!-- Jumbotron -->
    <div id="intro" class="p-5 text-center bg-light">
        <h1 class="mb-3 h2">McKee Family Adventures Blog Articles</h1>
        <p class="mb-3">Travel Stories, How-tos, Tips, and Hacks</p>
        <a class="btn btn-primary m-2" href="#" role="button" rel="nofollow" data-mdb-ripple-init
          target="_blank">Read the Latest Article</a>
        <!-- <a class="btn btn-primary m-2" href="https://mdbootstrap.com/docs/standard/" target="_blank" data-mdb-ripple-init
          role="button">Download MDB UI KIT</a> -->
      </div>
      <!-- Jumbotron -->
    </header>
    <!--Main Navigation-->
  
    <!--Main layout-->
    <main class="my-5">
      <div class="container">
        <!--Section: Content-->
        <section class="text-center">
          <h4 class="mb-5"><strong>Latest posts</strong></h4>
  
          <div class="row">
            <div class="col-lg-4 col-md-12 mx-auto">
                <% for(let i = 0; i < blogposts.length; i++) { %>
                    <div class="card mb-2">
                        <div class="card-header">
                            <a href="/post/<%= blogposts[i]._id %>">
                                <h2><%= blogposts[i].title %></h2>
                            </a>
                        </div>
                        <div class="card-body">
                            <%- blogposts[i].body %>
                        </div>
                      </div>
                      <% } %>
            </div>
          </div>
        </section>
        <!--Section: Content-->
  
        <!-- Pagination -->
        <nav class="my-4" aria-label="...">
          <ul class="pagination pagination-circle justify-content-center">
            <li class="page-item">
              <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item active" aria-current="page">
              <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#">Next</a>
            </li>
          </ul>
        </nav>
      </div>
    </main>
    <!--Main layout-->
  
    
    
    
    <%- include('Layouts/footer') %>
    <%- include('Layouts/scripts') %>
</body>
<!-- MDB -->
<script type="text/javascript" src="js/mdb.umd.min.js"></script>
</html>